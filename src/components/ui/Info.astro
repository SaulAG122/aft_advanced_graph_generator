---
interface Props {
  title: string;
  description: string;
  color: string;
  class?: string;
}

const { title, description, color, class: className = "" } = Astro.props;

const textColor = color.split(" ").find((c) => c.startsWith("text-")) || "";
---

<div class:list={["w-full"]}>
  <h3 class:list={["font-bold", "text-sm", textColor]}>
    {title}
  </h3>
  <p class:list={["text-xs", "font-semibold", "text-black", "leading-tight"]}>
    {description}
  </p>
</div>
